{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "globalReturn": true,
      "jsx": true
    }
  },


  "plugins": [
    "meteor",
    "react"
  ],
  "extends": [
    "airbnb",
    "plugin:meteor/recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "server": false,
    "browser": false,
    "expect": false,
    "faker": true
  },
  "rules": {
    "arrow-body-style": [1, "as-needed"],
    "no-unused-vars": ["warn"],
    "react/prop-types": ["warn"],
    "react/display-name": ["warn"],
    "max-len": ["error", 250],
    "new-cap": [
      2,
      {
        "capIsNewExceptions": [
          "Seed",
          "LocaleRoutes",
          "I18nService",
          "Radium",
          "C",
          "Maybe",
          "ReactiveAggregate"
        ]
      }
    ],
    "import/no-unresolved": 0,
    "no-underscore-dangle": 0
  }
}
